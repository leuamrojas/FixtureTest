<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_artist_details"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/tv_artist_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        app:layout_constraintTop_toBottomOf="@id/iv_artist_details"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextviewStyle2"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_artist_details_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://url"
        app:layout_constraintTop_toBottomOf="@id/tv_artist_details_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextviewStyle3"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_artist_details_listeners_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Listeners"
        android:textAppearance="@style/TextviewStyle2"
        app:layout_constraintTop_toBottomOf="@id/tv_artist_details_url"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/tv_artist_details_listeners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500000"
        android:textAppearance="@style/TextviewStyle2"
        app:layout_constraintLeft_toRightOf="@id/tv_artist_details_listeners_label"
        app:layout_constraintTop_toTopOf="@id/tv_artist_details_listeners_label"
        android:padding="5dp"
        android:layout_marginLeft="0dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>