<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_track_details"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/tv_track_details_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        app:layout_constraintTop_toBottomOf="@id/iv_track_details"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextviewStyle2"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_track_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/tv_track_details_artist"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextviewStyle"
        android:padding="5dp"
        />

    <LinearLayout
        android:id="@+id/ll_track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_track_details_name"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:id="@+id/tv_track_details_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textAppearance="@style/TextviewStyle2"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_track_details_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textAppearance="@style/TextviewStyle2"
            android:padding="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_track_details_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://url"
        app:layout_constraintTop_toBottomOf="@id/ll_track_duration"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextviewStyle3"
        android:padding="5dp"
        />

    <RelativeLayout
        android:id="@+id/ll_track_listeners_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_track_details_url"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/tv_track_details_rank_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:textAppearance="@style/TextviewStyle2"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_track_details_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textAppearance="@style/TextviewStyle2"
            android:layout_toRightOf="@id/tv_track_details_rank_label"
            android:padding="5dp"
            android:layout_marginLeft="0dp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/tv_track_details_listeners_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Listeners"
            android:textAppearance="@style/TextviewStyle2"
            android:layout_below="@id/tv_track_details_rank_label"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_track_details_listeners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500000"
            android:textAppearance="@style/TextviewStyle2"
            android:layout_below="@id/tv_track_details_rank"
            android:layout_alignLeft="@id/tv_track_details_rank"
            android:padding="5dp"
            android:layout_marginLeft="0dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>