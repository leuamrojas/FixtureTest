<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageview_no_connection"
            android:layout_width="@dimen/main_views_imageview_size"
            android:layout_height="@dimen/main_views_imageview_size"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/cd_no_connection"/>

        <TextView
            android:id="@+id/textview_title_no_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_no_connection"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/main_views_title_horizontal_margins"
            android:layout_marginRight="@dimen/main_views_title_horizontal_margins"
            android:layout_marginTop="@dimen/main_views_title_bottoml_margin"
            android:text="@string/no_connection_title"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_content_no_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_title_no_connection"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/main_views_content_bottom_margin"
            android:layout_marginLeft="@dimen/main_views_content_horizontal_margins"
            android:layout_marginRight="@dimen/main_views_content_horizontal_margins"
            android:layout_marginTop="@dimen/main_views_content_top_margin"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/main_views_content_line_spacing"
            android:text="@string/no_connection_content"
            android:textColor="@color/cardview_light_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_no_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_content_no_connection"
            android:layout_centerHorizontal="true"
            android:text="@string/no_connection_button"
            ndroid:theme="@style/ButtonStyle"
            android:textColor="@color/cardview_light_background"/>

    </RelativeLayout>

</RelativeLayout>